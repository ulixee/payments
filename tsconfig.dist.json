{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build-dist",
    "sourceMap": true,
    "inlineSourceMap": false
  },
  "include": ["./**/*.ts", "**/*.js", "**/*.json"],
  "exclude": [
    "**/tsconfig*.json",
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build",
    "build",
    "build-dist",
    "**/*.d.ts"
  ]
}
